<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<TextView
    android:id="@+id/titre"
    android:layout_width="277dp"
    android:layout_height="109dp"
    android:layout_marginStart="67dp"
    android:layout_marginTop="85dp"
    android:layout_marginEnd="67dp"
    android:layout_marginBottom="67dp"
    android:text="Petit ou Grand"
    android:textAlignment="center"
    android:textSize="36sp"
    app:layout_constraintBottom_toTopOf="@+id/jeu1j"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/quitter"
    android:layout_width="139dp"
    android:layout_height="70dp"
    android:layout_marginStart="136dp"
    android:layout_marginEnd="136dp"
    android:layout_marginBottom="96dp"
    android:onClick="quitterJeu"
    android:text="Quitter"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/jeu1j"
        android:layout_width="139dp"
        android:layout_height="70dp"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="82dp"
        android:onClick="jeu1j"
        android:text="1 joueur"
        app:layout_constraintBottom_toTopOf="@+id/jeu2j"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/jeu2j"
        android:layout_width="139dp"
        android:layout_height="70dp"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="82dp"
        android:onClick="jeu2j"
        android:text="2 joueurs"
        app:layout_constraintBottom_toTopOf="@+id/quitter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>